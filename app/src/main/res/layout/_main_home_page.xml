<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="._CoursePage"
    android:fitsSystemWindows="true">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:layout_gravity="start"/>
    <!-- Root layout is a ScrollView to allow the entire screen to scroll vertically if content is long -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- All content is placed inside a single ConstraintLayout for better performance and easier management -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E4C5B0"
            tools:ignore="HardcodedText,DuplicateIds">

            <!-- 1. Toolbar -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#D36112"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/menu_icon"
                app:title="HomeScreen"
                app:titleTextColor="@color/white"/>

            <!-- 2. "Empowering the Nation" Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/empowering_section"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#E4C5B0"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar">

                <TextView
                    android:id="@+id/empowering_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/baloo"
                    android:text="Empowering the Nation"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toStartOf="@+id/logo_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/empowering_subtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/blinker_semibold"
                    android:text="We Offer courses and training that help get your first entry role in your career."
                    app:layout_constraintEnd_toEndOf="@+id/empowering_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/empowering_title" />

                <ImageView
                    android:id="@+id/logo_image"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/_logo2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 3. "Preparing you for in-demand Jobs" Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/preparing_section"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#E4C5B0"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/empowering_section">

                <TextView
                    android:id="@+id/preparing_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/baloo"
                    android:text="Preparing you for in-demand Jobs"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toStartOf="@+id/cta_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/preparing_subtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/blinker_semibold"
                    android:text="Strengthen student employability with skills training from the most experienced teachers."
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/preparing_title"
                    app:layout_constraintStart_toStartOf="@+id/preparing_title"
                    app:layout_constraintTop_toBottomOf="@+id/preparing_title" />

                <ImageView
                    android:id="@+id/cta_image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/_homescreen_cta" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <!-- 4. "Featured Courses" Banner -->
            <ImageView
                android:id="@+id/courses_banner"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/preparing_section"
                app:srcCompat="@drawable/_iridescent_banner" />

            <!-- Title is now constrained INSIDE the banner -->
            <TextView
                android:id="@+id/courses_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="Featured Courses"
                android:textColor="#FFFFFF"
                android:textSize="34sp"
                app:layout_constraintBottom_toBottomOf="@+id/courses_banner"
                app:layout_constraintEnd_toEndOf="@+id/courses_banner"
                app:layout_constraintStart_toStartOf="@+id/courses_banner"
                app:layout_constraintTop_toTopOf="@+id/courses_banner" />

            <!-- 5. Horizontal Scroll for Course Cards -->
            <HorizontalScrollView
                android:id="@+id/courses_scroller"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#E4C5B0"
                android:paddingVertical="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/courses_banner">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp">

                    <!-- Course Card 1 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#83C186"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:contentDescription="course image"
                                android:scaleType="centerCrop"
                                android:src="@drawable/_first_aid" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="16dp"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/baloo"
                                android:text="First Aid"
                                android:textColor="#282828"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="16dp"
                                android:fontFamily="@font/blinker_semibold"
                                android:text="Six Weeks Course"
                                android:textColor="#777777"
                                android:textSize="14sp" />

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:backgroundTint="#589B92"
                                android:text="View"
                                android:textAllCaps="false" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!-- Course Card 2 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#83C186"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:contentDescription="course image"
                                android:scaleType="centerCrop"
                                android:src="@drawable/_landscaping" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="16dp"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/baloo"
                                android:text="Landscaping"
                                android:textColor="#282828"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="16dp"
                                android:fontFamily="@font/blinker_semibold"
                                android:text="Eight Weeks Course"
                                android:textColor="#777777"
                                android:textSize="14sp" />

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:backgroundTint="#589B92"
                                android:text="View"
                                android:textAllCaps="false" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!-- Course Card 3 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#83C186"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:contentDescription="course image"
                                android:scaleType="centerCrop"
                                android:src="@drawable/_garden_maintenance" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="16dp"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/baloo"
                                android:text="Gardening"
                                android:textColor="#282828"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="16dp"
                                android:fontFamily="@font/blinker_semibold"
                                android:text="Six Weeks Course"
                                android:textColor="#777777"
                                android:textSize="14sp" />

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:backgroundTint="#589B92"
                                android:text="View"
                                android:textAllCaps="false" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!-- Course Card 4 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#83C186"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:contentDescription="course image"
                                android:scaleType="centerCrop"
                                android:src="@drawable/_cooking" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="16dp"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/baloo"
                                android:text="Cooking"
                                android:textColor="#282828"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="16dp"
                                android:fontFamily="@font/blinker_semibold"
                                android:text="Six Weeks Course"
                                android:textColor="#777777"
                                android:textSize="14sp" />

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:backgroundTint="#589B92"
                                android:text="View"
                                android:textAllCaps="false" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- 6. "Testimonials" Banner -->
            <ImageView
                android:id="@+id/testimonials_banner"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/courses_scroller"
                app:srcCompat="@drawable/_iridescent_banner" />

            <!-- Title is now constrained INSIDE the banner -->
            <TextView
                android:id="@+id/testimonials_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="Testimonials"
                android:textColor="#FFFFFF"
                android:textSize="34sp"
                app:layout_constraintBottom_toBottomOf="@+id/testimonials_banner"
                app:layout_constraintEnd_toEndOf="@+id/testimonials_banner"
                app:layout_constraintStart_toStartOf="@+id/testimonials_banner"
                app:layout_constraintTop_toTopOf="@+id/testimonials_banner" />

            <!-- 7. Horizontal Scroll for Testimonial Cards (as designed previously) -->
            <!-- 7. Horizontal Scroll for Testimonial Cards -->
            <HorizontalScrollView
                android:id="@+id/testimonials_scroller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingHorizontal="8dp"
                android:paddingBottom="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/testimonials_banner">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp">

                    <!-- CORRECTED: Name now matches the 'testimonial_card.xml' file -->
                    <include layout="@layout/testimonial_card" />

                    <include layout="@layout/testimonial_card_2" />

                    <include layout="@layout/testimonial_card" />

                </LinearLayout>
            </HorizontalScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>
